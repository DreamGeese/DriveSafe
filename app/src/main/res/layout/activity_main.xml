<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/background"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/welcome_header"
        android:layout_alignParentStart="true"
        android:background="@color/primary_light"
        android:padding="50dp"
        android:translationZ="5dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/welcome_header"
            android:text="@string/welcome_header"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Display3"
            android:textColor="@color/primary_dark"
            android:textAlignment="center" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:translationZ="5dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_above="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/connection_status_header"
            android:id="@+id/connection_status_header"
            android:textColor="@color/fontlight"
            android:layout_above="@+id/connection_status"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/connection_status"
            android:id="@+id/connection_status"
            style="@style/Base.TextAppearance.AppCompat.Display2"
            android:textColor="#db253a"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="0dp"
        android:background="@color/primary"
        android:id="@+id/linearLayout"
        android:translationZ="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/detected_gesture_header"
            android:id="@+id/detected_gesture_header"
            android:textColor="@color/fontlight"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/detected_gesture"
            android:id="@+id/detected_gesture"
            android:textStyle="bold"
            android:textColor="@color/fontdark"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <!--<EditText-->
