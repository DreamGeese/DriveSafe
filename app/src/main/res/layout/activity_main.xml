<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/welcome_header"
        android:text="@string/welcome_header"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/primary"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/connection_status_header"
        android:id="@+id/connection_status_header"
        android:layout_above="@+id/connection_status"
        android:layout_centerHorizontal="true"
        android:textColor="@color/fontlight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/connection_status"
        android:id="@+id/connection_status"
        style="@style/Base.TextAppearance.AppCompat.Display2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#db253a"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/detected_gesture_header"
        android:id="@+id/detected_gesture_header"
        android:layout_above="@+id/detected_gesture"
        android:layout_alignEnd="@+id/connection_status_header"
        android:textColor="@color/fontlight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/detected_gesture"
        android:id="@+id/detected_gesture"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        android:textColor="@color/fontdark" />

